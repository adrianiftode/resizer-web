      h2: i class="icon-#{f[:icon]}"
        | &nbsp; #{f[:headline]}
      p
        | #{f[:description]}
  .span4
    - long_features.flatten[5..-1].each do | f |
      h2: i class="icon-#{f[:icon]}"
        | &nbsp; #{f[:headline]}
